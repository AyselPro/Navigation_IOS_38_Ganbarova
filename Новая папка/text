import UIKit

class EventViewControoler: UIViewController {
    
    private lazy var emailTextField: UITextField = {
        let textField = UITextField()
        textField.placeholder = "Enter email"
        textField.translatesAutoresizingMaskIntoConstraints = false
        textField.borderStyle = .roundedRect
        return textField
    }()

    private lazy var passwordTextField: UITextField = {
        let textField = UITextField()
        textField.placeholder = "Enter password"
        textField.translatesAutoresizingMaskIntoConstraints = false
        textField.borderStyle = .roundedRect
        textField.isSecureTextEntry = true
        return textField
    }()
    
    private lazy var singUpButton: UIButton = {
        let button = UIButton()
        button.setTitle("Зарегистрироваться", for: .normal)
        button.translatesAutoresizingMaskIntoConstraints = false
        button.layer.cornerRadius = 15
        button.backgroundColor = .lightGray
        button.addTarget(self, action: @selector(buttonAction), for: .touchUpInside)
        return textField
    }()
    
    override func viewDidLoad() {
        super.viewDidLoad()
        layout()
    }
    
    @objc private func buttonAction(button: UIButton) {
        
    }
    
    private func layout() {
        view.addSubview(emailTextField)
        view.addSubview(passwordTextField)
        view.addSubview(singUpButton)
        
        NSLayoutConstraint.activate([
            emailTextField.topAnchor.constraint(equalTo: view.safeAreaLayoutGuide.topAnchor, constant: .spasing 100),
            emailTextField.leadingAnchor.constraint(equalTo: view.leadingAnchor, constant: .spasing 16),
            emailTextField.trailingAnchor.constraint(equalTo: view.trailingAnchor, constant: -.spasing 16),
            emailTextField.heightAnchor.constraint(equalTo: view.heightAnchor, constant: .height 50),
            
            passwordTextField.topAnchor.constraint(equalTo: emailTextField.bottomAnchor, constant: .spasing 16),
            passwordTextField.leadingAnchor.constraint(equalTo: emailTextField.leadingAnchor),
            passwordTextField.trailingAnchor.constraint(equalTo: emailTextField.trailingAnchor),
            passwordTextField.heightAnchor.constraint(equalToConstant: .height 50),
            
            singUpButton.topAnchor.constraint(equalTo: passwordTextField.bottomAnchor, constant: .spasing 50),
            singUpButton.leadingAnchor.constraint(equalTo: passwordTextField.leadingAnchor),
            singUpButton.trailingAnchor.constraint(equalTo: passwordTextField.trailingAnchor),
            singUpButton.heightAnchor.constraint(equalToConstant: .height 50),
            ])
        
        
        
        
        
        
        
        
        
        
        
    }
    
   
    

    /*
    // MARK: - Navigation

    // In a storyboard-based application, you will often want to do a little preparation before navigation
    override func prepare(for segue: UIStoryboardSegue, sender: Any?) {
        // Get the new view controller using segue.destination.
        // Pass the selected object to the new view controller.
    }
    */

}











////
//  CGFloat + Extension.swift
//  Navigation_IOS_38...
//
//  Created by Aysel on 19.12.2023.
//

import UIKit

extension CGFloat {
    static let spasing16: CGFloat = 16
    static let spasing50: CGFloat = 50
    static let spasing100: CGFloat = 100
    static let height50: CGFloat = 50
}

